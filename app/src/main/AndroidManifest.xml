<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dell.khadamate">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" android:required="true"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" android:required="true"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".LoginActivity"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Register"
            android:noHistory="true"
            android:theme="@style/AppTheme.AppBarOverlay" />
        <activity
            android:name=".WorkerRegister"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".NormalUserRegister"
            android:theme="@style/AppTheme.AppBarOverlay" />
        <activity
            android:name=".HomePage"
            android:launchMode="singleInstance"
            android:label="@string/title_activity_home_page"
            android:theme="@style/AppTheme.PopupOverlay" />
        <activity
            android:name=".splashScreen"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Workers"
            android:parentActivityName=".HomePage"
            android:theme="@style/AppTheme.PopupOverlay" />
        <activity
            android:name=".VProfileWorker"
            android:theme="@style/AppTheme.AppBarOverlay" />
        <activity
            android:name=".WorkerHomePage"
            android:launchMode="singleTask"
            android:label="@string/title_activity_worker_home_page"
            android:theme="@style/AppTheme.PopupOverlay"></activity>
    </application>

</manifest>