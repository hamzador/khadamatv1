<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NormalUserRegister"
    android:background="#ffffff">
    <Button android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="7dp"
        android:background="@drawable/button_style1"
        android:drawableLeft="@drawable/ic_left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="164dp"
        android:layout_height="153dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/user_layout_background"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="136dp"
            android:layout_height="112dp"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:src="@drawable/ic_normaluser" />
    </LinearLayout>

    <EditText
        android:id="@+id/NUserFName"
        android:layout_width="331dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edit_text_style"
        android:drawablePadding="10dp"
        android:ems="10"
        android:gravity="right"
        android:hint="الإسم الشخصي"
        android:paddingTop="5dp"
        android:paddingRight="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <EditText
        android:id="@+id/NUserLName"
        android:layout_width="331dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edit_text_style"
        android:drawablePadding="10dp"
        android:ems="10"
        android:gravity="right"
        android:hint="الإسم العائلي"
        android:paddingTop="5dp"
        android:paddingRight="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NUserFName" />

    <EditText
        android:id="@+id/NUserEmail"
        android:layout_width="331dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edit_text_style"
        android:drawablePadding="10dp"
        android:ems="10"
        android:gravity="right"
        android:hint="بريد الإلكتروني للمستخدم"
        android:paddingTop="5dp"
        android:paddingRight="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NUserLName" />

    <EditText
        android:id="@+id/NUserPassword"
        android:layout_width="331dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edit_text_style"
        android:ems="10"
        android:gravity="right"
        android:hint="كلمة المرور"
        android:inputType="textPassword"
        android:paddingTop="5dp"
        android:paddingRight="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NUserEmail" />

    <EditText
        android:id="@+id/NUserRepeatePassword"
        android:layout_width="331dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edit_text_style"
        android:ems="10"
        android:gravity="right"
        android:hint="تأكيد كلمة المرور"
        android:inputType="textPassword"
        android:paddingTop="5dp"
        android:paddingRight="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NUserPassword" />

    <Button
        android:id="@+id/RegisterButton"
        android:layout_width="203dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_style1"
        android:text="تسجيل الحساب"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NUserRepeatePassword"
        app:layout_constraintVertical_bias="0.728"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>